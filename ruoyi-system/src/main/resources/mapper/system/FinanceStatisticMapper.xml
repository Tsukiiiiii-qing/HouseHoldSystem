<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FinanceStatisticMapper">

    <resultMap type="FinanceStatistic" id="FinanceStatisticResult">
        <result property="statisticId"    column="statistic_id"    />
        <result property="userId"    column="user_id"    />
        <result property="statisticType"    column="statistic_type"    />
        <result property="statisticKey"    column="statistic_key"    />
        <result property="incomeAmount"    column="income_amount"    />
        <result property="expenseAmount"    column="expense_amount"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectFinanceStatisticVo">
        select statistic_id, user_id, statistic_type, statistic_key, income_amount, expense_amount, create_time, update_time from finance_statistic
    </sql>

    <!-- 按指定维度（日期 / 类别 / 用户）聚合 finance_record，统计收入与支出总额 -->
    <select id="selectFinanceStatisticList" parameterType="FinanceStatistic" resultType="FinanceStatistic">
        SELECT
        <choose>
            <when test="statisticType == 'category'">
                'category' AS statistic_type,
                COALESCE(fr.category, '未分类') AS statistic_key,
            </when>
            <when test="statisticType == 'user'">
                'user' AS statistic_type,
                COALESCE(u.nick_name, u.user_name, CONCAT('用户', fr.user_id)) AS statistic_key,
            </when>
            <otherwise>
                'date' AS statistic_type,
                DATE_FORMAT(fr.record_date, '%Y-%m-%d') AS statistic_key,
            </otherwise>
        </choose>
        COALESCE(SUM(CASE WHEN CAST(fr.type AS CHAR) = '1' THEN CAST(fr.amount AS DECIMAL(20,2)) END), 0) AS income_amount,
        COALESCE(SUM(CASE WHEN CAST(fr.type AS CHAR) = '0' THEN CAST(fr.amount AS DECIMAL(20,2)) END), 0) AS expense_amount
        FROM finance_record fr
        LEFT JOIN sys_user u ON u.user_id = fr.user_id
        <where>
            <if test="statisticType == 'date' and statisticKey != null and statisticKey != ''">
                AND DATE_FORMAT(fr.record_date, '%Y-%m-%d') = #{statisticKey}
            </if>
            <if test="statisticType == 'category' and statisticKey != null and statisticKey != ''">
                AND fr.category = #{statisticKey}
            </if>
            <if test="statisticType == 'user' and statisticKey != null and statisticKey != ''">
                AND (u.nick_name = #{statisticKey} OR u.user_name = #{statisticKey})
            </if>
        </where>
        GROUP BY
        <choose>
            <when test="statisticType == 'category'">
                fr.category
            </when>
            <when test="statisticType == 'user'">
                u.nick_name, u.user_name, fr.user_id
            </when>
            <otherwise>
                DATE_FORMAT(fr.record_date, '%Y-%m-%d')
            </otherwise>
        </choose>
        ORDER BY
        <choose>
            <when test="statisticType == 'category'">
                fr.category ASC
            </when>
            <when test="statisticType == 'user'">
                statistic_key ASC
            </when>
            <otherwise>
                statistic_key DESC
            </otherwise>
        </choose>
    </select>

    <select id="selectFinanceStatisticByStatisticId" parameterType="Long" resultMap="FinanceStatisticResult">
        <include refid="selectFinanceStatisticVo" />
        where statistic_id = #{statisticId}
    </select>

    <insert id="insertFinanceStatistic" parameterType="FinanceStatistic" useGeneratedKeys="true" keyProperty="statisticId">
        insert into finance_statistic
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="statisticType != null">statistic_type,</if>
            <if test="statisticKey != null">statistic_key,</if>
            <if test="incomeAmount != null">income_amount,</if>
            <if test="expenseAmount != null">expense_amount,</if>
            create_time
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="statisticType != null">#{statisticType},</if>
            <if test="statisticKey != null">#{statisticKey},</if>
            <if test="incomeAmount != null">#{incomeAmount},</if>
            <if test="expenseAmount != null">#{expenseAmount},</if>
            now()
        </trim>
    </insert>

    <update id="updateFinanceStatistic" parameterType="FinanceStatistic">
        update finance_statistic
        <trim prefix="set" suffixOverrides=",">
            <if test="incomeAmount != null">income_amount = #{incomeAmount},</if>
            <if test="expenseAmount != null">expense_amount = #{expenseAmount},</if>
            update_time = now()
        </trim>
        where statistic_id = #{statisticId}
    </update>

    <delete id="deleteFinanceStatisticByStatisticId" parameterType="Long">
        delete from finance_statistic where statistic_id = #{statisticId}
    </delete>

    <delete id="deleteFinanceStatisticByStatisticIds" parameterType="String">
        delete from finance_statistic where statistic_id in
        <foreach item="statisticId" collection="array" open="(" separator="," close=")">
            #{statisticId}
        </foreach>
    </delete>

</mapper>
