<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TaskReminderMapper">

    <resultMap type="TaskReminder" id="TaskReminderResult">
        <result property="reminderId"    column="reminder_id"    />
        <result property="userId"    column="user_id"    />
        <result property="reminderTitle"    column="reminder_title"    />
        <result property="reminderTime"    column="reminder_time"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTaskReminderVo">
        select reminder_id, user_id, reminder_title, reminder_time, status, create_time, update_time, remark from task_reminder
    </sql>

    <select id="selectTaskReminderList" parameterType="TaskReminder" resultMap="TaskReminderResult">
        <include refid="selectTaskReminderVo" />
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="reminderTitle != null  and reminderTitle != ''"> and reminder_title like concat('%', #{reminderTitle}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
        order by reminder_time asc
    </select>

    <select id="selectTaskReminderByReminderId" parameterType="Long" resultMap="TaskReminderResult">
        <include refid="selectTaskReminderVo" />
        where reminder_id = #{reminderId}
    </select>

    <select id="selectDueTaskReminder" parameterType="Long" resultMap="TaskReminderResult">
        <include refid="selectTaskReminderVo" />
        where user_id = #{value} and status = 0 and reminder_time &lt;= now()
        order by reminder_time asc
        limit 1
    </select>

    <insert id="insertTaskReminder" parameterType="TaskReminder" useGeneratedKeys="true" keyProperty="reminderId">
        insert into task_reminder (user_id, reminder_title, reminder_time, is_overspend_alert, status, create_time
        <if test="remark != null">, remark</if>
        ) values (#{userId}, #{reminderTitle}, #{reminderTime}, 0, #{status}, now()
        <if test="remark != null">, #{remark}</if>
        )
    </insert>

    <update id="updateTaskReminder" parameterType="TaskReminder">
        update task_reminder
        <trim prefix="set" suffixOverrides=",">
            <if test="reminderTitle != null">reminder_title = #{reminderTitle},</if>
            <if test="reminderTime != null">reminder_time = #{reminderTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            update_time = now()
        </trim>
        where reminder_id = #{reminderId}
    </update>

    <delete id="deleteTaskReminderByReminderId" parameterType="Long">
        delete from task_reminder where reminder_id = #{reminderId}
    </delete>

    <delete id="deleteTaskReminderByReminderIds" parameterType="String">
        delete from task_reminder where reminder_id in
        <foreach item="reminderId" collection="array" open="(" separator="," close=")">
            #{reminderId}
        </foreach>
    </delete>

</mapper>
